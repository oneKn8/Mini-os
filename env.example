# Database Configuration
DATABASE_URL=postgresql://ops_user:changeme@localhost:5432/ops_center

# NVIDIA AI Configuration
NVIDIA_API_KEY=nvapi-your-key-here
LLM_MODEL_NAME=meta/llama3-70b-instruct
LLM_SERVER_URL=https://integrate.api.nvidia.com/v1
EMBEDDINGS_MODEL_NAME=nvidia/nv-embedqa-e5-v5

# Gmail OAuth
GMAIL_CLIENT_SECRET_PATH=/path/to/gmail_client_secret.json

# Outlook/Office 365 OAuth
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
OUTLOOK_TENANT_ID=common

# Google Calendar OAuth
GOOGLE_CALENDAR_CLIENT_SECRET_PATH=/path/to/calendar_client_secret.json

# Weather API
WEATHER_API_KEY=your-openweathermap-api-key
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# Application Configuration
SECRET_KEY=your-secret-key-for-jwt-tokens-min-32-chars
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# Feature Flags
ENABLE_TRACING=false
ENABLE_SAFETY_AGENT=true
ENABLE_PREFERENCE_LEARNING=true
ENABLE_WEATHER_CONTEXT=true

# Orchestrator Configuration
MAX_AGENT_RETRIES=3
AGENT_TIMEOUT_SECONDS=30
ORCHESTRATOR_BATCH_SIZE=10

# Email Configuration
EMAIL_FETCH_LIMIT=50
EMAIL_SYNC_INTERVAL_MINUTES=15
EMAIL_FULL_BODY_THRESHOLD_KB=100

# Calendar Configuration
CALENDAR_LOOKAHEAD_DAYS=14
CALENDAR_SYNC_INTERVAL_MINUTES=30

# Action Proposal Configuration
AUTO_REJECT_HIGH_RISK_ACTIONS=true
PROPOSAL_EXPIRY_HOURS=72

# Redis (for caching and job queue, if used)
REDIS_URL=redis://localhost:6379/0

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc

# Testing
TEST_DATABASE_URL=postgresql://ops_user:changeme@localhost:5432/ops_center_test

